    <script>
        // بيانات الإعلانات (نظامية ومنوعة)
        const ads = [
            { id: 1, cat: 'سيارات', title: 'تويوتا هايلوكس دبل 2022 وكالة', price: '125,000 ريال', loc: 'الرقة - المشلب', img: 'https://images.unsplash.com/photo-1583121274602-3e2820c69888?w=500', phone: '0931234567', desc: 'سيارة شبه جديدة، ماشية 15 ألف كم، ديزل، غمارتين، فحص كامل.' },
            { id: 2, cat: 'مواشي', title: 'خراف نعيمي طيبة (تربية مزارعنا)', price: '1,850 ريال', loc: 'الرقة - سوق الغنم', img: 'https://images.unsplash.com/photo-1484557985045-edf25e08da73?w=500', phone: '0937654321', desc: 'غنم نعيمي أصيل، أوزان ممتازة، مناسبة للذبايح والقنية.' },
            { id: 3, cat: 'عقارات', title: 'شقة 3 غرف وصالة - حي الثكنة', price: '380,000 ريال', loc: 'الرقة - حي الثكنة', img: 'https://images.unsplash.com/photo-1522708323590-d24dbb6b0267?w=500', phone: '0930009998', desc: 'طابق ثاني، إطلالة رائعة، جاهزة للسكن، كسوة ديلوكس.' },
            { id: 4, cat: 'سيارات', title: 'هيونداي النترا 2018 كرت', price: '54,000 ريال', loc: 'الرقة - حي الرميلة', img: 'https://images.unsplash.com/photo-1503376780353-7e6692767b70?w=500', phone: '0933334445', desc: 'سيارة استخدام نظيف جداً، بصمة، فتحة سقف، صيانة دورية.' },
            { id: 5, cat: 'موبايلات', title: 'آيفون 14 برو ماكس 256GB', price: '3,200 ريال', loc: 'الرقة - تل أبيض', img: 'https://images.unsplash.com/photo-1664478546384-d97f3c04e286?w=500', phone: '0935556667', desc: 'الجهاز كرتونة، بطارية 100%، لون ليلكي مميز، مع الكفالة.' },
            { id: 6, cat: 'مواشي', title: 'فحل نعيمي ضخم للتربية', price: '4,200 ريال', loc: 'الرقة - مفرق الجزرة', img: 'https://images.unsplash.com/photo-1511117833452-4778b3bd057c?w=500', phone: '0931112220', desc: 'فحل نعيمي أصيل، جرم ضخم وارتفاع طيب، مناسب لتحسين السلالة.' }
        ];

        function render(items) {
            const grid = document.getElementById('adsGrid');
            grid.innerHTML = items.map(ad => `
                <div onclick="openAd(${ad.id})" class="bg-white rounded-xl shadow-sm border overflow-hidden cursor-pointer active:scale-95 transition">
                    <img src="${ad.img}" class="w-full h-36 object-cover">
                    <div class="p-3">
                        <h4 class="text-[13px] font-bold truncate text-gray-800">${ad.title}</h4>
                        <p class="text-blue-700 font-black text-sm mt-1">${ad.price}</p>
                        <p class="text-[10px] text-gray-400 mt-1"><i class="fas fa-map-marker-alt"></i> ${ad.loc}</p>
                    </div>
                </div>`).join('');
        }

        function filterAds(cat) {
            document.getElementById('sectionTitle').innerText = 'قسم ' + cat;
            render(ads.filter(a => a.cat === cat));
            window.scrollTo(0,0);
        }

        function openAd(id) {
            const ad = ads.find(a => a.id === id);
            document.getElementById('detImg').src = ad.img;
            document.getElementById('detTitle').innerText = ad.title;
            document.getElementById('detPrice').innerText = ad.price;
            document.getElementById('detLoc').innerText = ad.loc;
            document.getElementById('detDesc').innerText = ad.desc;
            document.getElementById('callBtn').href = 'tel:' + ad.phone;
            document.getElementById('waBtn').href = 'https://wa.me/' + ad.phone + '?text=مرحبا، بخصوص إعلان: ' + ad.title;
            document.getElementById('detailsPage').classList.add('active');
        }

        function closeDetails() { document.getElementById('detailsPage').classList.remove('active'); }

        // تشغيل الموقع في البداية
        render(ads);
    </script>
</body>
